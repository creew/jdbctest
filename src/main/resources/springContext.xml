<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="serviceJdbcConnection" class="org.example.service.connection.JdbcConnectionPostgre">
        <!-- inject any dependencies required by this locator bean -->
    </bean>

    <bean id="connection"
          factory-bean="serviceJdbcConnection"
          factory-method="getConnection"
    />

    <bean id="crudRepository" class="org.example.dao.CrudRepositoryClient">
        <constructor-arg ref="connection"/>
    </bean>

    <bean id="serverService" class="org.example.service.server.JettyRestService">
        <constructor-arg value="8080"/>
    </bean>
</beans>